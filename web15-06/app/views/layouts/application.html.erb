<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
              data-target=".navbar-collapse">
      </button>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to "Home", root_path %></li>
        <li><%= link_to "Project", menu_index_path, id: "project" %></li>
        <li><%= link_to "Basics", assignments_contents_path %></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">

        <% if user_signed_in? %>
            <% if current_user.role == Role.find_by_name("Admin") %>
                <li><%= link_to "Users", users_path, id: "user" %></li>
                <li><%= link_to "Roles", roles_path, id: "role" %></li>
            <% end %>
            <% if current_user.role == Role.find_by_name("Member") %>
                <li><%= link_to "Manage Account", users_path(current_user)%></li>
            <% end %>
            <% if current_user.role == Role.find_by_name("Vendor") %>
                <li><%= link_to "Manage Account", users_path(current_user) %></li>
                <li><%=link_to "Add Category", categories_path, id: "category" %></li>
                <li><%=link_to "Add Item", items_path, id: "item" %></li>
            <% end %>
            <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
        <% else %>
            <li><%= link_to "Sign up", new_user_registration_path %></li>
            <li><%= link_to "Sign in", new_user_session_path %></li>.
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @assignment.name %>
</p>

<p>
  <strong>Url:</strong>
  <%= @assignment.url %>
</p>

<%= link_to 'Edit', edit_assignment_path(@assignment) %> |
<%= link_to 'Back', assignments_path %>

<h2>Problems</h2>
<% @assignment.problems.each do |problem| %>
<p>
<b>Problemid:</b>
<%= problem.problemid %>
</p>
<p>
<b>Name:</b>
<%= problem.name %>
</p>
<% end %>
<br/>
<h2>Add a problem:</h2>
<%= form_for([@assignment, @assignment.problems.build]) do |f| %>
<div class="field">
<%= f.label :problemid %><br />
<%= f.number_field :problemid %>
</div>
<div class="field">
<%= f.label :name %><br />
<%= f.text_field :name %>
</div>
<div class="actions">
<%= f.submit %>
</div>
<% end %>
